#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash"

# Use the /proc filesystem to get information about processes
for pid_dir in /proc/*/; do
    pid=$(basename "$pid_dir")
    if [[ -f "$pid_dir/cmdline" && -r "$pid_dir/cmdline" ]]; then
        if grep -q "bash" "$pid_dir/cmdline"; then
            process_name=$(tr '\0' ' ' < "$pid_dir/cmdline")
            echo "$pid $process_name"
        fi
    fi
done
