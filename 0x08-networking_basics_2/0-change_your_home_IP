#!/usr/bin/env bash
# This script changes the IP address for localhost and facebook.com

# Check if the script is run with sudo
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script with sudo."
    exit 1
fi

# Modify /etc/hosts file to change IP addresses
sed -i 's/localhost$/localhost\n127.0.0.2/' /etc/hosts
sed -i 's/facebook.com/8.8.8.8/' /etc/hosts

# Display success message
echo "IP addresses changed successfully!"
