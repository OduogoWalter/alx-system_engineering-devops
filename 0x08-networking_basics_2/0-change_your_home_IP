#!/usr/bin/env bash
# This script configures the localhost and facebook.com IP addresses on an Ubuntu server

# Change localhost IP
sudo sed -i 's/127\.0\.0\.1/127\.0\.0\.2/g' /etc/hosts

# Change facebook.com IP
sudo sed -i '/facebook.com/d' /etc/hosts
sudo bash -c 'echo "8.8.8.8 facebook.com" >> /etc/hosts'

