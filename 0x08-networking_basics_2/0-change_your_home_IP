#!/usr/bin/env bash
# This script changes the IP address for localhost and facebook.com

# Check if the script is run with sudo
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script with sudo."
    exit 1
fi

# Modify /etc/hosts file to change IP addresses
if grep -q "127.0.0.1" /etc/hosts; then
    sed -i 's/127.0.0.1/127.0.0.2/' /etc/hosts
    echo "localhost IP address changed successfully!"
else
    echo "localhost entry not found in /etc/hosts. Exiting."
    exit 1
fi

if grep -q "facebook.com" /etc/hosts; then
    sed -i 's/.*/8.8.8.8 facebook.com/' /etc/hosts
    echo "Facebook IP address changed successfully!"
else
    echo "facebook.com entry not found in /etc/hosts. Exiting."
    exit 1
fi

