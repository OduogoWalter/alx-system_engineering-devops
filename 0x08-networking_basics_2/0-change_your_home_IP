#!/usr/bin/env bash
# This script reverts the changes made to localhost IP address on an Ubuntu server

# Revert localhost IP
sudo sed -i 's/127\.0\.0\.2/127\.0\.0\.1/g' /etc/hosts

# Revert facebook.com IP if it was changed
sudo sed -i 's/^.*facebook\.com .*$/# Existing entry reverted/g' /etc/hosts

