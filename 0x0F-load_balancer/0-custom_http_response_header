#!/usr/bin/env bash
# This script configures Nginx to include a custom HTTP response header on a new Ubuntu machine

# Update and install Nginx
sudo apt update
sudo apt install -y nginx

# Edit Nginx configuration file to add custom header
sudo sed -i '/server {/a \        add_header X-Served-By $hostname;' /etc/nginx/sites-available/default

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
sudo systemctl reload nginx
