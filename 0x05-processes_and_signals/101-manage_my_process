#!/usr/bin/env bash
# Bash init script to manage manage_my_process

# Path to the manage_my_process script
MANAGE_SCRIPT="/path/to/manage_my_process"

# Function to start the manage_my_process
start_process() {
    $MANAGE_SCRIPT &
    echo $! > /var/run/my_process.pid
    echo "manage_my_process started"
}

# Function to stop the manage_my_process
stop_process() {
    if [ -f "/var/run/my_process.pid" ]; then
        kill $(cat /var/run/my_process.pid)
        rm -f /var/run/my_process.pid
        echo "manage_my_process stopped"
    else
        echo "No process to stop"
    fi
}

# Function to restart the manage_my_process
restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Check for arguments
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
