#!/usr/bin/env bash
# This script configures Nginx to include a custom HTTP response header on a new Ubuntu machine

# Update package repository and install Nginx
sudo apt update
sudo apt install -y nginx

# Get the hostname without the domain name
hostname=$(hostname -s)

# Configure Nginx to include the custom header
sudo bash -c 'cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    # Custom HTTP Response Header
    add_header X-Served-By $hostname;
}
EOF'

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
sudo systemctl reload nginx
