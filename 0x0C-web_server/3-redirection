#!/usr/bin/env bash

# Update package lists
sudo apt-get update -y

# Install nginx
sudo apt-get install nginx -y

# Define the redirection configuration
redirection_config="location /redirect_me {
    return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
}"

# Remove the default configuration for redirect_me if present
sudo sed -i '/location \/redirect_me {/,/}/d' /etc/nginx/sites-available/default

# Add the new redirection configuration
sudo sed -i "/server_name _;/a $redirection_config" /etc/nginx/sites-available/default

# Restart nginx service to apply changes
sudo systemctl restart nginx

